@using TarefasSite.HttpContext
@inject IUserContext Context
@{
    ViewData["Title"] = "_Layout";
}

<html>
<head>
    <link href="~/lib/bootstrap/css/bootstrap.css?v=1.0.0.2" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <ul class="nav mb-4">
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/Home">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Tarefas">Lista de Tarefas</a>
            </li>
            @if (Context.IsAuthenticated == true)
            {
                <li class="col-lg-12" style="text-align: right">
                    <a class="btn btn-outline-primary" href="/User/Logout">Sair</a>
                </li>
            }
        </ul>
        @RenderBody()
    </div>
</body>
</html>


