@model TarefasSite.ViewModels.TarefaViewModel
@{
    ViewData["Title"] = "Nova";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card p-3">

    @using (Html.BeginForm(FormMethod.Post))
    {


        @if (ViewBag.ExisteErro == true)
        {
            <div class="alert-danger p-3">
                @Html.ValidationSummary(false, "Os seguintes erros foram encontrados: ", new { @class = "text-danger" })
            </div>
        }


        <div class="card-body mb-3">
            Criar nova Tarefa
        </div>

        <div class="mb-3">
            @Html.Label("IdCategoria", "Categoria", new { @class = "form-label" })
            @Html.DropDownListFor(m => m.IdCategoria, Model.Categorias, "Selecione", new { @class = "form-select" })            
            
        </div>

        <div class="mb-3">
            <div class="row">
                @Html.LabelFor(m => m.Data, new { @class = "col-6 form-label" })
                @Html.LabelFor(m => m.Hora, new { @class = "col-6 form-label" })
            </div>

            <div class="row">
                <div class="col-6">
                    @Html.TextBoxFor(m => m.Data, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                </div>
                <div class="col-6">
                    @Html.TextBoxFor(m => m.Hora, "{0:HH:mm}", new { @class = "form-control", type = "time" })
                </div>
            </div>

        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Descricao, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Descricao, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            @Html.CheckBoxFor(m => m.Notificacao, new { @class = "form-check-input" })
            @Html.LabelFor(m => m.Notificacao, new { @class = "form-check-label" })
        </div>

        <div>
            <button class="btn btn-primary" type="submit">Salvar</button>
            @Html.ActionLink("Cancelar", "Index", "Tarefas", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>

